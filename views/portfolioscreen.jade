extends layout

block content
  <h1 align="center">Student Portfolio System</h1>


  nav.navbar.navbar-inverse(data-spy='affix', data-offset-top='197')
  .container-fluid
  .navbar-header
    button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
      span.icon-bar
      span.icon-bar
      span.icon-bar
      a.navbar-brand(href='#') Student Profile System
      div
      #myNavbar.collapse.navbar-collapse
  .container
    .jumbotron
      h1 Portfolio Screenshot Upload
      hr
      p.lead Please fill in your details:
      br
      form(role='form', action="/portfolioscreen",method="post", enctype="multipart/form-data",style='max-width: 300px;')
        .form-group
          label(for='name')
            h3
              | Student Name
              span(style='color: #FF0000;') *
              | :
            input.form-control(type='text', name="name", placeholder=' Student Name...')
            .alert.alert-warning.alert-dismissable.fade.in
              a.close(href='#', data-dismiss='alert', aria-label='close') Ã—
              strong Warning!
              |  Student name is mandatory.
        .form-group
            label(for='screenshot')
                h3
                  |Screenshot
                  span(style='color: #FF0000;') *
                  |:
            input(type="text", name="title1", placeholder=" Title...")
            input.btn.btn-info(type="file", name="image2")
            button.btn.btn-success(type='submit') Submit
            &nbsp;
            a(href='/')
              button.btn.btn-danger(type="button") Cancel

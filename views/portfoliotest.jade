extends layout

block content
  <h1 align="center">Student Portfolio System</h1>


  nav.navbar.navbar-inverse(data-spy='affix', data-offset-top='197')
  .container-fluid
  .navbar-header
    button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
      span.icon-bar
      span.icon-bar
      span.icon-bar
      a.navbar-brand(href='#') Student Profile System
      div
      #myNavbar.collapse.navbar-collapse
  .container
    .jumbotron
      h1 Portfolio Creation
      hr
      p.lead Please fill in your details:
      br
      form(role='form', action="/portfolio",method="post", enctype="multipart/form-data",style='max-width: 300px;')
        .form-group
          label(for='name')
            h3
              | Student Name
              span(style='color: #FF0000;') *
              | :
            input.form-control(type='text', name="name", placeholder=' Student Name...')
            .alert.alert-warning.alert-dismissable.fade.in
              a.close(href='#', data-dismiss='alert', aria-label='close') ×
              strong Warning!
              |  Student name is mandatory.
        .form-group
            label(for='profile')
                h3 Profile Picture:
            input(type="text", name="title1", placeholder=" Title...")
            input.btn.btn-info(type="file", name="image1")
            .alert.alert-warning.alert-dismissable.fade.in
              a.close(href='#', data-dismiss='alert', aria-label='close') ×
              strong Alert!
              |  Profile picture is optional.
        .form-group
          label(for='work')
            h3
              | Previous Work
              span(style='color: #FF0000;') *
              | :
              textarea(name="work" placeholder="Links...")#comment.form-control(rows='5')
              
              .alert.alert-warning.alert-dismissable.fade.in
                a.close(href='#', data-dismiss='alert', aria-label='close') ×
                strong Warning!
                |  1 Previous work is mandatory.
            br
            button.btn.btn-success(type='submit') Submit
            &nbsp;
            a(href='/')
              button.btn.btn-danger(type="button") Cancel
